<%-include('partials/header')-%>
<style>
    .thumbnail img{
        width:100%;
    }
    .thumbnail{
        padding:0;
    }

</style>
<div class="container">
<div>
    <div class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>view our hand-picked campgrounds from all over the world</p>
        <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campgrounds</a></p>
    </div>
    <div class="row" style="display:flex; flex-wrap:wrap;">
    <%data.forEach(function(row){%>
        <div class="col-lg-4">
            <div class="thumbnail">
                <img src='<%=row.image%>'>
            <div style="text-align:center;" class="caption">
                <%=row.name%>    
            </div>
            <p>
                <a class="btn btn-primary btn-block" href="/campgrounds/<%=row._id%>">Show Info</a>              
            </p>
            </div>
        </div>
    <%})%>
    </div>
</div>
</div>
<%-include('partials/footer')-%>